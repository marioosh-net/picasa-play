# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /login                                      controllers.Application.login(pass)
GET     /logout                                     controllers.Application.logout()
GET     /                                           controllers.Application.albumsPartial(message ?="")
GET     /album/:serviceIndex/:albumId               controllers.Application.photos(serviceIndex:Int, albumId, start:Int ?=0, max:Int ?=0)
GET     /pub/:serviceIndex/:albumId/:photoId        controllers.Application.pub(serviceIndex:Int, albumId, photoId)
GET     /priv/:serviceIndex/:albumId/:photoId       controllers.Application.priv(serviceIndex:Int, albumId, photoId)
GET     /pub/:serviceIndex/:albumId                 controllers.Application.pubAlbum(serviceIndex:Int, albumId)
GET     /priv/:serviceIndex/:albumId                controllers.Application.privAlbum(serviceIndex:Int, albumId)
GET     /auth                                       controllers.Application.auth()
GET     /token                                      controllers.Application.token(token)
GET     /test                                       controllers.Test.loadTestData(count:Int ?=1, create:Boolean ?=false)
GET     /test/:count                                controllers.Test.loadTestData(count:Int, create:Boolean ?=false)
GET     /deleteall                                  controllers.Test.deleteAllAlbums()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                               controllers.Assets.at(path="/public", file)
